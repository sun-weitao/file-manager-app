@model file_manager_app.Models.FileViewModel

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">文件上传</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("add", "File", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true)
                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(m => m.title)
                            @Html.TextBoxFor(m => m.title, new { @class = "form-control", placeholder = "请输入文件名称" })
                            @Html.ValidationMessageFor(m => m.title)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m=>m.file,new { @for = "inputFile" })
                            @Html.TextBoxFor(m => m.file,new { type = "file",@id = "inputFile" })
                            @Html.ValidationMessageFor(m => m.file)
                        </div>
                        <!-- radio -->
                        <div class="form-group">
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.isShared, 0, new { @id = "optionsRadios1"})共享
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.isShared, 1, new { @id = "optionsRadios2", Checked ="checked"})不共享
                                </label>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">提交</button>
                    </div>
                }
            </div><!-- /.box -->
        </div>
    </div>
</section>
